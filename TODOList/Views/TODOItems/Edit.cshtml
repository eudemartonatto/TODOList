@model TODOList.Models.TODOItem

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>TODOItem</h4>
<hr />
<div class="row">
    <div class="col-md-4">
      <form asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
          <label asp-for="Name" class="control-label"></label>
          <input asp-for="Name" class="form-control" />
          <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
          <label asp-for="Descricao" class="control-label"></label>
          <input asp-for="Descricao" class="form-control" />
          <span asp-validation-for="Descricao" class="text-danger"></span>
        </div>
        <div class="form-group form-check">
          <label class="form-check-label">
            <input class="form-check-input" asp-for="Concluido" /> @Html.DisplayNameFor(model => model.Concluido)
          </label>
        </div>
        <div class="form-group">
          <label asp-for="DataHoraInsercao" class="control-label"></label>
          <input asp-for="DataHoraInsercao" class="form-control" />
          <span asp-validation-for="DataHoraInsercao" class="text-danger"></span>
        </div>
        <div class="form-group">
          <label asp-for="DataHoraVencimento" class="control-label"></label>
          <input asp-for="DataHoraVencimento" class="form-control" />
          <span asp-validation-for="DataHoraVencimento" class="text-danger"></span>
        </div>
        <div class="form-group">
          <label asp-for="DataHoraFinalizacao" class="control-label"></label>
          <input asp-for="DataHoraFinalizacao" class="form-control" />
          
        </div>
        <div class="form-group">
          <label asp-for="DataHoraAtualizacao" class="control-label"></label>
          <input asp-for="DataHoraAtualizacao" class="form-control" />
          <span asp-validation-for="DataHoraAtualizacao" class="text-danger"></span>
        </div>
        <div class="form-group">
          <input type="submit" value="Gravar" class="btn btn-primary" />
        </div>
      </form>
    </div>
</div>

<div>
  <a asp-action="Index">Volta à lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
